generator client {
  provider        = "prisma-client-js"
  output          = "../client"
  previewFeatures = ["deno", "prismaSchemaFolder"]
}

generator erd {
  provider = "npx prisma-erd-generator"
  theme = "forest"
  output = "ERD.md"
  includeRelationFromFields = true
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}
