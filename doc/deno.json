{
  "imports": {
    "@ooker777/lume-mermaid-plugin": "jsr:@ooker777/lume-mermaid-plugin@^0.1.1",
    "lume/": "https://deno.land/x/lume@v2.3.3/",
    "lumocs/": "https://deno.land/x/lumocs@0.1.3/"
  },
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s --port=9000"
  },
  "compilerOptions": {
    "types": [
      "lume/types.ts"
    ]
  }
}
